import math

# calculate the space diagonal of a cube

# user input dimensions
user_input = input("enter l, b, h separated by a comma\n")
user_input_list = user_input.split(",")
converted_list = [int(s) for s in user_input_list]

l = converted_list[0]
b = converted_list[1]
h = converted_list[2]

def find_space_diagonal(l, b, h):
    # formula
    Space_diagonal = math.sqrt(l ** 2 + b ** 2 + h ** 2)

    #display space diagonal
    print(Space_diagonal)

# function call
find_space_diagonal(l, b, h)
